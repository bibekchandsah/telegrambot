# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_from_botfather

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
# For Railway/Render with Redis addon, use: redis://:password@host:port/0

# Application Settings
LOG_LEVEL=INFO
MAX_QUEUE_SIZE=500
MESSAGE_RATE_LIMIT=30
CHAT_TIMEOUT=600
NEXT_COMMAND_LIMIT=10

# Admin Settings
# Comma-separated list of Telegram user IDs who can use admin commands
# To get your user ID, message @userinfobot on Telegram
ADMIN_IDS=123456789,987654321

# Dashboard Settings
DASHBOARD_PORT=5000
DASHBOARD_HOST=0.0.0.0

# Environment
ENVIRONMENT=development

# ============================================
# TOTP Authentication Configuration
# ============================================
# Leave TOTP_SECRET empty on first run - QR code will be generated
# After scanning QR code with your authenticator app, add the secret key here and restart
TOTP_SECRET=

# Maximum login attempts before lockout (default: 5)
TOTP_MAX_ATTEMPTS=5

# Session secret for Flask (auto-generated if not set)
# For production, generate a secure random string:
# python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=

