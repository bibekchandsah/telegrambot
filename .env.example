# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_from_botfather

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
# For Railway/Render with Redis addon, use: redis://:password@host:port/0

# Application Settings
LOG_LEVEL=INFO
MAX_QUEUE_SIZE=500
MESSAGE_RATE_LIMIT=30
CHAT_TIMEOUT=600
NEXT_COMMAND_LIMIT=10

# Admin Settings
# Comma-separated list of Telegram user IDs who can use admin commands
# To get your user ID, message @userinfobot on Telegram
ADMIN_IDS=123456789,987654321

# Environment
ENVIRONMENT=development
